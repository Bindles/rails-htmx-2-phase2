<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
  <style>
    .red {color: red}
  </style>
</head>
<body>
  <div x-data="{count: 0}">
  <button @click="alert('sasa')">Alert</button>
  <button @click="console.log('sasa')">Log</button>
  <br>
  <button @click="count++">+</button>
  <button @click="count--">-</button>
  <span x-text="count"></span>


  <br><br>

  <div x-data="{tweet: 'say sumpn'}">
    <textarea name="dick" id="" cols="30" rows="10" x-model="tweet"></textarea>
    <div x-text="tweet.length" x-bind:class="tweet.length > 14 ? 'red' : '' "></div>
  </div>

  <br><br>

  <div x-data="{}" x-init="">
    <input type="text">
  </div>

  <script>
    new Pikaday({ field: document.querySelector('input')})
  </script>



</div>
</body>
</html>

